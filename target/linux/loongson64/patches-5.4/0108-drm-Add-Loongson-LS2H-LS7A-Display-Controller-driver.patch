+{
+	int ret;
+	struct pci_dev *pdev = NULL;
+
+	/* If external graphics card exist, use it as default */
+	while ((pdev = pci_get_class(PCI_CLASS_DISPLAY_VGA << 8, pdev))) {
+		if (pdev->vendor == PCI_VENDOR_ID_ATI)
+			return 0;
+		if (pdev->vendor == 0x1a03) /* ASpeed */
