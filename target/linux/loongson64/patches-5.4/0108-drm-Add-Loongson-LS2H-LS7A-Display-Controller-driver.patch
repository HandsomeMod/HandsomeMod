+u32 crtc_read(struct loongson_crtc *lcrtc, u32 offset)
+{
+	struct loongson_drm_device *ldev = lcrtc->ldev;
+	return readl(ldev->rmmio + offset + (lcrtc->crtc_id * CRTC_REG_OFFSET));
+}
