+void crtc_write(struct loongson_crtc *lcrtc, u32 offset, u32 val)
+{
+	struct loongson_drm_device *ldev = lcrtc->ldev;
+	writel(val, ldev->rmmio + offset + (lcrtc->crtc_id * CRTC_REG_OFFSET));
+}
