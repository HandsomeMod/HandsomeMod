+	ret = snd_card_new(&pdev->dev, index[dev], id[dev], THIS_MODULE,
+			   0, &card);
+	if (ret < 0) {
+		dev_err(&pdev->dev, "Error creating card!\n");
+		return ret;
+	}
+
+	ret = azx_create(card, pdev, NULL, dev, AZX_DRIVER_ICH | AZX_DCAPS_LS2X_WORKAROUND, &chip);
+	if (ret < 0)
+		goto out_free;
