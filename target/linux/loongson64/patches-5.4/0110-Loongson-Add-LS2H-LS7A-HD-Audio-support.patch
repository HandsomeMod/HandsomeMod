+
+/* pci_driver definition */
+static struct pci_driver azx_pci_driver = {
+	.name = "loongson-audio",
+	.id_table = azx_ids,
+	.probe = azx_pci_probe,
+	.remove = azx_pci_remove,
+	.shutdown = azx_pci_shutdown,
