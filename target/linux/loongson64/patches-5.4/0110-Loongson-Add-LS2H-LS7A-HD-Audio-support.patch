+	return ret;
+}
+
+static void azx_pci_remove(struct pci_dev *pdev)
+{
+	snd_card_free(dev_get_drvdata(&pdev->dev));
+}
+
+static void azx_pci_shutdown(struct pci_dev *pdev)
+{
+	struct snd_card *card = dev_get_drvdata(&pdev->dev);
+	struct azx *chip;
+
+	if (!card)
+		return;
