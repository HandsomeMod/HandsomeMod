+static struct platform_driver ls2x_rtc_driver = {
+	.probe		= ls2x_rtc_probe,
+	.remove		= ls2x_rtc_remove,
+	.driver		= {
+		.name	= "ls2x-rtc",
+		.owner	= THIS_MODULE,
+#ifdef CONFIG_OF
