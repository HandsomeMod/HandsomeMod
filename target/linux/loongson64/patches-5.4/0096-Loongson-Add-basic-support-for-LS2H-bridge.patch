+	 * bit[14]:	host/otg select,	0: host         1: otg
+	 * bit[26]:	usb reset,		0: enable       1: disable
+	 */
+	val = readl(LS2H_CHIP_CFG0_REG);
+	writel(val | (1 << 5) | (1 << 4) | (1 << 14) | (1 << 26), LS2H_CHIP_CFG0_REG);
