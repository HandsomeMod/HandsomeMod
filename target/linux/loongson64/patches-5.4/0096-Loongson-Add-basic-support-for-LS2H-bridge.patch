+	reg = (void *)(LS2H_PCIE_PORT_HEAD_BASE(port) | PCI_CLASS_REVISION);
+	data = (readl(reg) & 0xffff) | (PCI_CLASS_BRIDGE_PCI << 16);
+	writel(data, reg);
